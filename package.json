{
  "name": "yashvi-pro-suite",
  "version": "1.0.0",
  "description": "Yashvi Pro Suite - Batch watermark images with logo",
  "productName": "Yashvi Pro Suite",
  "homepage": "./",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "react-scripts start",
    "build": "react-scripts build",
    "build:electron": "npm run build && node scripts/prepare-electron-build.js && electron-builder",
    "electron": "electron ."
  },
  "keywords": ["watermark", "image", "batch"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.9.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yashvi.prosuite",
    "productName": "Yashvi Pro Suite",
    "extends": null,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/assets/yashvi-logo.png",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "CFBundleName": "Yashvi Pro Suite",
        "CFBundleDisplayName": "Yashvi Pro Suite",
        "CFBundleExecutable": "Yashvi Pro Suite"
      }
    },
    "files": [
      "build/electron.js",
      "build/preload.js",
      "build/package.json",
      "build/static/**/*",
      "build/index.html",
      "build/asset-manifest.json",
      "build/assets/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*",
      "resources/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "extraMetadata": {
      "main": "build/electron.js"
    }
  }
}

